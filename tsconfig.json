{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "types": ["vitest/globals", "node"],
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "node_modules/@types/puppeteer/index.d.ts", "scripts"]
}
